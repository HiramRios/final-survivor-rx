{% if section.settings.bg_color != blank %}
  <style>
    #shopify-section-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
    }
  </style>
{% endif %}
<div class="wrapper--full-padded">
  <div class="how-works">
    <div class="how-works__heading">
      <h2 class="h1">{{ section.settings.title }}</h2>
      {{ section.settings.content }}
    </div>
    <div class="how-works__blocks">
      {% for block in section.blocks %}
        <div class="how-works__block">
          <img class="how-works__block__img" src="{{ block.settings.image | img_url: '800x' }}">
          {% if template contains 'index' %}
          <span class="how-works__block__num">{{ forloop.index }}</span>
          {% endif %}
          <span class="how-works__block__title">{{ block.settings.title }}</span>
          <span class="how-works__block__content">{{ block.settings.content }}</span>
        </div>
      {% endfor %}
    </div>
    {% if section.settings.btn_text %}
      <div class="how-works-btns">
        <a href="{{ section.settings.btn_link }}" class="btn btn--solid btn--primary">{{ section.settings.btn_text }}</a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "How it works",
  "class": "how-works-wrapper",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
     {
      "name": "block",
      "type": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },

         {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
     }
  ],
  "presets": [
    {
      "name":"How It Works"
    }
  ]
}
{% endschema %}
