<div class="wrapper">
  <div class="explore-community">
    <h2 class="explore-community__heading">{{ section.settings.title }}</h2>
    <div class="explore-community__content">{{ section.settings.content }}</div>
    <div class="explore-community__blocks">
      {% for block in section.blocks %}
        <div class="explore-community__block">
          <img class="community-block__img" src="{{ block.settings.image | img_url: '600x' }}">
          <span class="community-block__title">{{ block.settings.title }}</span>
          <span class="community-block__content">{{ block.settings.content }}</span>
          <a class="community-block__link btn btn--solid" href="{{ block.settings.link }}">Read More</a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('.explore-community__blocks').slick({
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 1,
      dots: false,
      arrows: true,
      prevArrow: `<div class="slick-prev">{% render 'slider-prev-arrow' %}</div>`,
      nextArrow: `<div class="slick-next">{% render 'slider-next-arrow' %}</div>`,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });
  });
</script>

{% schema %}
{
  "name": "Explore Community",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Explore Community",
      "category": "Text"
    }
  ]
  }
{% endschema %}
