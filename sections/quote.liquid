<div class="section-quote-{{ section.id }}">
  <div class="wrapper">
    <div class="quote-section">
      <div class="quote-section__image">
        <img src="{{ section.settings.first_image | img_url: 'master' }}" alt="First Image">
        <img src="{{ section.settings.second_image | img_url: 'master' }}" alt="Second Image">
      </div>
      <div class="quote-section__content">
        <div class="quote-section__quote">
          {{ section.settings.quote }}
        </div>
        <div class="quote-section__author">
          {{ section.settings.author }}
        </div>
        <div class="quote-section__author-title">
          {{ section.settings.author_title }}
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .section-quote-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>
{% schema %}
{
  "name": "Quote",
  "settings": [
    {
      "type": "image_picker",
      "id": "first_image",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "second_image",
      "label": "Second Image"
    },
    {
      "type": "text",
      "id": "quote",
      "label": "Quote"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author"
    },
    {
      "type": "text",
      "id": "author_title",
      "label": "Author Title"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Quote"
    }
  ]
}
{% endschema %}